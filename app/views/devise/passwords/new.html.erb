<body class="text-center">
  <h2 class = 'h3 mb-3 font-weight-normal'>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:
  'form-signin'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="actions" style="margin-top: 20px">
      <%= f.submit "Send me reset password instructions",  class: "btn btn-lg btn-primary btn-block"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</body>
